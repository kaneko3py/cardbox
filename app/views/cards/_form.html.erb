<%= simple_form_for @card, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :user_id %>
  <%= f.input :no %>
  <%= f.input :question %>
  <%= f.input :answer %>
  <%= f.input :comment %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                cards_path, :class => 'btn' %>
  </div>
<% end %>
